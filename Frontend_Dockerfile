FROM node:20-alpine AS build

WORKDIR /app
COPY livevibe.client/package*.json ./
RUN npm install

COPY livevibe.client/ .
ENV NODE_ENV=production
RUN npm run build -- --config vite.config.prod.js

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY livevibe.client/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 5173
CMD ["nginx", "-g", "daemon off;"] 